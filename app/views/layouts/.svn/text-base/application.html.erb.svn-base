<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/2000/REC-xhtml1-20000126/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<%= render :partial => 'layouts/head' %>
<body>
	<div id="wrapper">	
		<% if current_page?(:controller => 'works' || 'reprints') || current_page?(:action => 'new') || current_page?(:action => 'edit')%>
			<div class="admin_nav">
			<%= render :partial => 'layouts/admin_nav' %><br />
			</div>
		<% end %>
		<div class="main_nav">	
			<%= render :partial => 'layouts/navigation' %>
			<% if current_page?(:controller => 'bibliography') && @results && !@results.empty? %>
				<div class="search_wrapper_home">
				<% form_tag '/bibliography', :id => "search_form_home", :method => "GET" do -%>						
				<%= text_field_tag :search_field, 'Search Bibliography', :onfocus => "this.value=''"%>
				<%= select_tag "category_basic_id", options_for_select([["Search By Category",""]] + @categories.collect{|c| [c.name,c.id]}) %>		
				<%= submit_tag "Search", :id => "search_btn", :value => "" %>
				<% end %>
				</div>
			<% else %><br /><br /><% end %>
		</div>
		<div id="lincolnkirstein_print">
				<img src="/images/logo_print.gif" width="194" height="95" alt="Logo Print">		
		</div>
		<div id="mainbody_wrapper">
			<div id="interior_header">
				<a id="logo_link" href="/" style="outline:none"></a>
			</div>
			<%= yield %>			
	</div>	
	<!-- END mainbody_wrapper -->
	<div id="footer">
		<div id="left_links">
			<img src="/images/footer_crest.gif" width="41" height="14" alt="" /><p>&copy; <a href="http://www.eakinspress.com/" target="_blank">Eakins Press Foundation</a> &amp; Ballet Society, Inc., <%= Date.today.year %>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="/resources/">Resources</a></p>
		</div>	
		<div id="right_links">
			<p><a href="/credits/">Credits</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://blue-iceberg.com">Website by Blue Iceberg</a></p>
		</div>
	</div>
	<!-- END footer -->
</div>
<!-- END wrapper -->

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-435173-33']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</body>
</html>

